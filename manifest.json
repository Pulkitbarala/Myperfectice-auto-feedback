{
  "manifest_version": 3,
  "name": "Auto Feedback Extension",
  "version": "1.0",
  "description": "Automatically submits feedback on the LPU MyPerfectice platform.",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://lpu.myperfectice.com/student/test-feedbacks/*"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "start-feedback": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Start auto-feedback"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
